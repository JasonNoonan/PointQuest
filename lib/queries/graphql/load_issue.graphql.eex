{
  issue(id: "<%= @id %>") {
    id
    identifier
    title
    description
    branchName
    comments {
      nodes {
        id
        body
        url
        createdAt
        user {
          id
          displayName
          email
          url
          avatarUrl
        }
      }
    }
    createdAt
    creator {
      id
      displayName
      email
      url
      avatarUrl
    }
    cycle {
      id
      name
      number
    }
    estimate
    inverseRelations {
      nodes {
        issue {
          id
          identifier
          title
        }
        relatedIssue {
          id
          identifier
          title
        }
        type
      }
    }
    labels {
      nodes {
        id
        name
      }
    }
    relations {
      nodes {
        issue {
          id
          identifier
          title
        }
        relatedIssue {
          id
          identifier
          title
        }
        type
      }
    }
    state {
      id
      name
      position
    }
    priority
    project {
      id
      name
    }
    url
  }
}
